<h1>Listing ceos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Salary</th>
      <th>Company</th>
      <th>Company revenue</th>
      <th>Number employees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ceos.each do |ceo| %>
      <tr>
        <td><%= ceo.name %></td>
        <td><%= ceo.salary %></td>
        <td><%= ceo.company %></td>
        <td><%= ceo.company_revenue %></td>
        <td><%= ceo.number_employees %></td>
        <td><%= link_to 'Show', ceo %></td>
        <td><%= link_to 'Edit', edit_ceo_path(ceo) %></td>
        <td><%= link_to 'Destroy', ceo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

